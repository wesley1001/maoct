<div class="field">
  <div class="ui secondary segment">
    <div class="field">
      <%= f.label :key %>
      <%= f.text_field :key %>
    </div>
    <div class="field">
      <%= f.label :real_value %>
      <%= f.number_field :real_value, placeholder: '免费请填0，提交后不能修改' %>
    </div>
    <div class="field">
      <%= f.label :quota %>
      <%= f.number_field :quota, placeholder: '默认无限制', pattern: '[0-9]*' %>
    </div>
    <%= link_to_remove_association '删除费用项', f,
    { class: 'ui button', wrapper_class: 'field' } %>
  </div>
</div>
