<%= link_to '创建活动', new_meetup_path, class: 'ui fluid button' %>

<% @meetups.each do |meetup| %>
  <%= link_to meetup_path(meetup), class: 'ui fluid card' do %>
    <div class="content">
      <div class="header"><%= meetup.title %></div>
      <div class="meta"><%= meetup.place %></div>
      <div class="description"><%= meetup.intro %></div>
    </div>
    <div class="extra content">
      <span class="right floated">
        <% if meetup.apply_expired? %>
          报名已结束
        <% else %>
          报名进行中
        <% end %>
      </span>
      <span>
        <i class="check icon"></i>
        <%= meetup.meetup_enrolls_count %> 人已报名
      </span>
    </div>
  <% end %>
<% end %>
